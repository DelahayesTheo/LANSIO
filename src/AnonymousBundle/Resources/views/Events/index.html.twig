{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/event.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('font-awesome-4.7.0/css/font-awesome.css') }}"/>

{% endblock %}
{% block body %}
    {% include '@Anonymous/Component/menu.html.twig' %}

    <div class="row">
        <main class="col-sm-12 pt-3">
            <h1 class="col-lg-6">Listes des evenements en cours :</h1>
            <section class="mx-auto col-lg-8">
                {% if events is not empty %}
                    {% for event in events %}
                        {% include 'AnonymousBundle:Events:eventCard.html.twig' %}
                    {% endfor %}
                {% else %}
                    <h3 class="mx-auto">Il n'y a pas d'événements en cours pour le moment</h3>
                {% endif %}
            </section>
            <a href="{{ path('anonymous_event_add') }}"><i class="fa fa-4x fa-plus-square add-event"
                                                           aria-hidden="true"></i></a>
        </main>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/alertSystem.js') }}"></script>
{% endblock %}
{% block scripts %}
    {% for message in app.session.flashbag.get('notice') %}
        $.notify("{{ message }}", "success");
    {% endfor %}
{% endblock %}