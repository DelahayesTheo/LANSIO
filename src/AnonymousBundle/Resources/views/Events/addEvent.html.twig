{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/event.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('font-awesome-4.7.0/css/font-awesome.css') }}"/>
{% endblock %}
{% block body %}
    {% include '@Anonymous/Component/menu.html.twig' %}

    <div class="row">
        <main class="col-sm-12 pt-3">
            <h1 class="col-lg-6">Ajouter un évenement :</h1>
            <section class="mx-auto col-lg-8 ">
                <form method="post" class="form-event col-lg-12 ">
                    <div class="form-group offset-lg-4 col-lg-4">
                        {{ form_label(form.title, "Titre") }}
                        {{ form_widget(form.title, {'attr' : {'class' : 'form-control form-input-text'}}) }}
                    </div>
                    <div class="form-group offset-lg-4  col-lg-4">
                        {{ form_label(form.comment, 'Commentaire') }}
                        {{ form_widget(form.comment, {'attr' : {'class' : 'form-control form-input-text'}}) }}
                    </div>
                    <div class="form-group offset-lg-4  col-lg-4">
                        {{ form_label(form.nbPlayersMax, 'Nombre de participant maximum :') }}
                        {{ form_widget(form.nbPlayersMax, {'attr' : {'class' : 'form-control form-input-text'}}) }}
                    </div>
                    <div class="form-group offset-lg-4 col-lg-4">
                        {{ form_label(form.game, 'Jeu :') }}
                        {{ form_widget(form.game, {'attr' : {'class' : 'form-control form-input-text text-center'}}) }}
                    </div>
                    <div class="mx-auto col-lg-offset-4 col-lg-4">
                        {{ form_widget(form.save, {'label' : 'Créer événement'}) }}
                    </div>
                    {{ form_rest(form) }}
                </form>
            </section>
            <a href="{{ path('anonymous_event_add') }}"><i class="fa fa-4x fa-plus-square add-event"
                                                           aria-hidden="true"></i></a>
        </main>
    </div>
{% endblock %}
{% block scripts %}
    {% for message in app.session.flashbag.get('notice') %}
        $.notify("{{ message }}", "success");
    {% endfor %}
{% endblock %}