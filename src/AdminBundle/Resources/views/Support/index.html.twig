{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}"/>
{% endblock %}
{% block body %}
    {% include 'AdminBundle:component:topNavbar.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include 'AdminBundle:component:sideMenu.html.twig' %}

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <h1>Liste des requêtes :</h1>

                <section class="mx-auto row text-center">
                    <table class="table table-hover table-striped">
                        <thead>
                        <td><b>Titre</b></td>
                        <td><b>Contenu</b></td>
                        <td><b>Actions</b></td>
                        </thead>

                        {% for supportRequest in supportRequests %}
                            <tr id="request-{{ supportRequest.id }}">
                                <td>{{ supportRequest.title }}</td>
                                <td>{{ supportRequest.content }}</td>
                                <td><a href="#" class="btn btn-primary" onclick="closeRequest({{ supportRequest.id }})"
                                       class="dropdown-item">Fermer la requête</a></li>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </section>
            </main>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/support.js') }}"></script>
{% endblock %}
