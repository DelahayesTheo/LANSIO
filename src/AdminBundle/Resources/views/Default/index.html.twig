{% extends '::base.html.twig' %}
{% block body %}
    {% include 'AdminBundle:component:sideMenu.html.twig' %}
    <h3>Liste des utilisateurs :</h3>
            <div class="col-lg-offset-1 col-lg-10">
                <table class="table table-hover table-striped">
                    <thead>
                    <td><b>Nom d'utilisateur</td>
                    <td><b>Email</td>
                    <td><b>Derni√®re connexion</td>
                    <td><b>Roles</td>
                    </thead>

                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.lastLogin|date('d/m/Y') }}</td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role }} &nbsp
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
{% endblock %}
