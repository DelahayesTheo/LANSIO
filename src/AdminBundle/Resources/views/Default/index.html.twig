{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}" />
{% endblock %}
{% block body %}
    {% include 'AdminBundle:component:topNavbar.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include 'AdminBundle:component:sideMenu.html.twig' %}

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <h1>Liste des utilisateurs :</h1>

                <section class="mx-auto row text-center">
                    <div class="col-lg-offset-1 col-lg-10">
                        <table class="table table-hover table-striped">
                            <thead>
                            <td><b>Nom d'utilisateur</td>
                            <td><b>Nom</b></td>
                            <td><b>Prenom</b></td>
                            <td><b>Email</td>
                            <td><b>Derni√®re connexion</td>
                            <td><b>Roles</td>
                            </thead>

                            {% for user in users %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.lastLogin|date('d/m/Y') }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {{ role }} &nbsp
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path("admin_reset_user_password", {"id" : user.id}) }}"
                                           class="btn btn-primary">Reset password</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </section>


            </main>

        </div>
    </div>
{% endblock %}
