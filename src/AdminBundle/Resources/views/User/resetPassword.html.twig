{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.css') }}"/>
{% endblock %}
{% block body %}
    {% include 'AdminBundle:component:topNavbar.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include 'AdminBundle:component:sideMenu.html.twig' %}

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <h1>Ajouter un utilisateur :</h1>

                <section class="mx-auto row text-center">
                    <form class="form-horizontal" method="post" role="form">
                        <div class="form-group">
                            <div class="control-label col-sm-3">
                                {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                            </div>
                            <div class="col-sm-9">
                                {{ form_widget(form.plainPassword.first) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-sm-3">
                                {{ form_label(form.plainPassword.second, 'Confirmation') }}
                            </div>
                            <div class="col-sm-9">
                                {{ form_widget(form.plainPassword.second) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9 ">
                                {{ form_widget(form.save, {'attr': {'class' : 'btn btn-primary'}, 'label' : 'Valider'}) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                </section>
            </main>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% for message in app.session.flashbag.get('notice') %}
        $.notify("{{ message }}", "success");
    {% endfor %}
{% endblock %}