{% extends '::base.html.twig' %}
{% block body %}
    {% include 'AdminBundle:component:sideMenu.html.twig' %}
    <h3>Liste des plateformes :</h3>
    <div class="col-lg-offset-1 col-lg-10">
        <table class="table table-hover table-striped">
            <thead>
            <td><b>Code</b></td>
            <td><b>Libelle</b></td>
            <td><b>Actions</b></td>
            </thead>

            {% for platform in platforms %}
                <tr>
                    <td>{{ platform.code }}</td>
                    <td>{{ platform.wording }}</td>
                    <td><a href="{{ path('admin_modify_platform', {'platform' : platform.id}) }}" class="btn btn-primary">Modifier</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}