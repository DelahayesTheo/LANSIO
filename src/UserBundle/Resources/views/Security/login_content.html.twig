{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/login.css') }}" />
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row">
        <div id="Login">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong class="">Login</strong>
                </div>
                <div class="panel-body black">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Nom d'utilisateur</label>
                            <div class="col-sm-8">
                                <input type="text" name="_username" class="form-control" id="username" placeholder="Nom d'utilisateur" value="{{ last_username }}" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-4 control-label">Mot de passe</label>
                            <div class="col-sm-8">
                                <input type="password" name="_password" class="form-control" id="password" placeholder="Mot de passe" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <div class="checkbox">
                                    <label class="">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">Se souvenir de moi</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group last">
                            <div class="col-sm-offset-4 col-sm-4">
                                <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-sm">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>